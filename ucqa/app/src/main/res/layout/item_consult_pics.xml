<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/bg_white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_margin="10dp"

        >

        <LinearLayout
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.dawnlightning.ucqa.view.ProcessImageView
                    android:id="@+id/piv_consult_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/bg"
                    android:adjustViewBounds="true"
                    />
                <com.dawnlightning.ucqa.view.PictureTitleEdittext
                    android:background="@null"
                    android:id="@+id/et_consult_picture_title"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/piv_consult_picture"
                    android:hint="请输入图片描述"
                    android:textColor="@color/black"
                    android:textSize="16.0sp"
                    />
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            >
            <ImageView
                android:id="@+id/iv_consult_picture_delete"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@mipmap/ic_delete"
                android:scaleType="center"
                />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>