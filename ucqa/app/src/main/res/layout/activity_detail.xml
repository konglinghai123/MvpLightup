<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_detail_parent"
    >
    <RelativeLayout
        android:id="@+id/rl_detail_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#549D37" >

        <ImageView
            android:id="@+id/iv_detail_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/ic_back" />

        <TextView
            android:id="@+id/tv_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="问题详细"
            android:textColor="#ffffff"
            android:textSize="20sp" />
        <ImageView
            android:id="@+id/iv_detail_actions"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_add"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_alignParentEnd="false" />
    </RelativeLayout>
    <com.dawnlightning.ucqa.view.UserDefineScrollView
        android:id="@+id/sv_detail_parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ProgressBar
                android:id="@+id/pb_detail_load"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal|center_vertical"
                android:visibility="gone"
                android:progressDrawable="@drawable/loading_pb_bg"
                android:max="100"
                />
            <RelativeLayout
                android:id="@+id/rl_detail_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:background="@mipmap/bg_white"
                android:visibility="gone"
                >
                <ImageView
                    android:id="@+id/iv_detail_consult_status"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    />
                <LinearLayout
                    android:layout_below="@+id/iv_detail_consult_status"
                    android:id="@+id/ll_detail_userdata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    >
                    <com.dawnlightning.ucqa.view.RoundImageView
                        android:id="@+id/iv_detail_icon"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:scaleType="center"
                        />
                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_toRightOf="@+id/iv_detail_icon"
                        android:id="@+id/linearLayout">
                        <TextView
                            android:id="@+id/tv_detail_subject"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18.0sp"
                            android:textColor="#020202"
                            android:textIsSelectable="true"
                            android:maxLines="2"
                            />

                        <TextView
                            android:id="@+id/tv_detail_userdata"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12.0sp"
                            android:textColor="#8a8888"
                            android:maxLines="1"
                            android:layout_marginTop="12dp"

                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_detail_flag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/ll_detail_userdata"
                    >
                    <TextView
                        android:id="@+id/tv_detail_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15.0sp"
                        android:textColor="#020202"
                        android:textIsSelectable="true"
                        />
                    <GridView
                        android:id="@+id/gv_detail_picslist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:verticalSpacing="10dp"
                        android:numColumns="1"
                        android:scrollbars="none"
                        android:visibility="invisible"
                        />
                    <LinearLayout
                        android:id="@+id/ll_detail_sign"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:visibility="gone"
                        >
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                            <ImageView
                                android:id="@+id/iv_detail_viewpeople"
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:background="@mipmap/ic_viewpeople"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"

                                />
                            <TextView
                                android:id="@+id/tv_detail_numview"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                android:singleLine="true"

                                android:textSize="10.0sp"
                                android:textColor="@color/nomalGray"
                                android:layout_toRightOf="@+id/iv_detail_viewpeople"
                                />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/iv_detail_commentpeople"
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:background="@mipmap/ic_comment"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"

                                />
                            <TextView
                                android:id="@+id/tv_detail_numreply"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:singleLine="true"
                                android:textSize="10.0sp"
                                android:textColor="@color/nomalGray"
                                android:layout_toRightOf="@+id/iv_detail_commentpeople"
                                android:layout_centerVertical="true"
                                >

                            </TextView>

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_detail_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:textSize="10.0sp"
                            android:gravity="center_vertical|right"
                            android:textColor="@color/nomalGray" />

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_detail_comment"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:visibility="gone"
                android:background="@mipmap/bg_white"
                >
                <com.dawnlightning.ucqa.view.ExpandListView
                    android:id="@+id/lv_comment_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="当前无评论"
                    android:id="@+id/tv_detail_nocomment"
                    android:textSize="18.0sp"
                    android:textColor="#020202"
                    android:visibility="invisible"
                    />
            </RelativeLayout>
        </LinearLayout>

    </com.dawnlightning.ucqa.view.UserDefineScrollView>
    <LinearLayout
        android:id="@+id/ll_detail_setcomment"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="vertical"
        android:background="@mipmap/bg_white"
        android:visibility="gone"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/default_line"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <EditText
                android:layout_margin="2dp"
                android:id="@+id/ed_setcomment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="写下你的想法和大家交流吧"
                android:layout_toLeftOf="@+id/bt_sentcomment"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <Button
                android:layout_margin="2dp"
                android:layout_width="48dp"
                android:layout_height="30dp"
                android:text="评论"
                android:textSize="15.0sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/nomalGray"
                android:background="@drawable/btn_comment"
                android:id="@+id/bt_sentcomment" />
        </RelativeLayout>

        <View

            android:layout_marginTop="2dp"
            android:layout_height="2dp"
            android:layout_width="match_parent"
            android:background="@drawable/edittext_line"
            />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl_detail_error"
        android:background="@mipmap/bg_white"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/iv_detail_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@mipmap/nomessage"
            />
        <TextView
            android:id="@+id/tv_detail_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="5dp"
            android:textColor="@color/nomalGray"
            android:textSize="12sp"
            android:text="暂无咨询"
            />
        <Button
            android:id="@+id/bt_detail_error"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#549D37"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:text="发布咨询"
            android:layout_gravity="center_horizontal|center_vertical"
            />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>