<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    >

    <TextView
        android:id="@+id/left_menu_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/left_menu_img"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/left_menu_img"
        android:textColor="@color/white"
        android:textSize="16.0sp"
    	android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/tv_update_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_light"
        android:text="NEW"
        android:visibility="gone"
        android:textColor="@color/white"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="5sp"
        android:layout_toRightOf="@+id/left_menu_img"
        android:layout_toEndOf="@+id/left_menu_img" />
    <ImageView
        android:id="@+id/left_menu_img"
        android:layout_width="24dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
    	android:layout_marginLeft="60dp"
      	android:layout_centerVertical="true"
        />

</RelativeLayout>