<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:id="@+id/ll_detail_userdata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <com.dawnlightning.ucqa.view.RoundImageView
            android:id="@+id/rv_message_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@mipmap/mylogo"
            android:scaleType="center"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/tv_message_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_red_light"
            android:text="NEW"
            android:visibility="gone"
            android:textColor="@color/white"
            android:gravity="center_horizontal|center_vertical"
            android:textSize="5sp"
            android:layout_toRightOf="@+id/left_menu_img"
            android:layout_toEndOf="@+id/left_menu_img" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/tv_messsage_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16.0sp"
                    android:textColor="#020202"
                    android:text="如何有效地在海外市场推广产品？"
                    />
                <TextView
                    android:id="@+id/tv_message_content"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/tv_messsage_note"
                    android:text="2分钟前"
                    android:textColor="@color/nomalGray"
                    android:textSize="12.0sp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>